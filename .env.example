# GitHub Personal Access Token (Classic) - Needs public_repo scope
GITHUB_PAT=

# GitHub OAuth App Credentials
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# NextAuth Secret (generate using: openssl rand -base64 32)
NEXTAUTH_SECRET=

# NextAuth Base URL (http://localhost:3000 for dev)
NEXTAUTH_URL=http://localhost:3000

# GitHub GraphQL API Endpoint
NEXT_PUBLIC_GITHUB_GRAPHQL_ENDPOINT=https://api.github.com/graphql
